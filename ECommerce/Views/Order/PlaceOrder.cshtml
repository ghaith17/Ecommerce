@model IEnumerable<ECommerce.Models.Item>

@{
    ViewBag.Title = "PlaceOrder";
}
<h2>PlaceOrder</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Price)
    </td>
    <td>
        @Html.EditorFor(modelItem => item.Quantity)
        @Html.ValidationMessageFor(modelItem => item.Quantity)
    </td>
    <td>
        @Html.ActionLink("Delete", "DeleteFromOrder", new { id = item.Id })
    </td>

</tr>
}

</table>
