@model ECommerce.Models.Order

@{
    ViewBag.Title = "Checkouts";
}

<h2>Checkouts</h2>

@using (Html.BeginForm()) 
{
    @*@Html.AntiForgeryToken()*@
    
<div class="form-horizontal">
    <h4>Order</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Id, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.HiddenFor(model => model.Id, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
        </div>
    </div>
    @for (int i = 0; i < Model.getShoppingCart().ListOfITems.Count; i++)
    {
        <tr>
            <td>
                @Html.DisplayFor(model => Model.getShoppingCart().ListOfITems[i].Quantity)
                @Html.HiddenFor(model => Model.getShoppingCart().ListOfITems[i].Quantity)
            </td>
            <td>
                @Html.DisplayFor(model => Model.getShoppingCart().ListOfITems[i].Name)
                @Html.HiddenFor(model => Model.getShoppingCart().ListOfITems[i].Name)
            </td>
            <td>
                @Html.DisplayFor(model => Model.getShoppingCart().ListOfITems[i].Price)
                @Html.HiddenFor(model => Model.getShoppingCart().ListOfITems[i].Price)
            </td>
            <td>
                @*@Html.CheckBoxFor(model => Model.Items[i].SealedItem, new { @class = "checkBox" })*@
                @Html.HiddenFor(model => Model.getShoppingCart().ListOfITems[i].Item_Id)

            </td>


        </tr>
    }
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Checkouts" class="btn btn-default" />
        </div>
    </div>
</div>
}


