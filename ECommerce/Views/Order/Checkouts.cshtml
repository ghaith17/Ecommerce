@model ECommerce.Models.Order

@{
    ViewBag.Title = "Checkouts";
}

<h2>Checkouts</h2>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="dl-horizontal">
    </dl>
</div>
@using (Html.BeginForm())
{
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Quantity")
        </th>
        <th>
            @Html.DisplayName("Name")
        </th>
        <th>
            @Html.DisplayName("Price")
        </th>
        <th></th>
    </tr>
    @Html.HiddenFor(model => Model.Items)
    @Html.HiddenFor(model => Model.Bill)
    @Html.HiddenFor(model => Model.ItemsName)
    @Html.HiddenFor(model => Model.Id)
    @for (int i = 0; i < Model.Items.Count; i++)
    {
        <tr>
            <td>
                @Html.DisplayFor(model => Model.Items[i].Quantity)
                @Html.HiddenFor(model => Model.Items[i].Quantity)
                @Html.HiddenFor(model => Model.ItemsName[i])
            </td>
            <td>
                @Html.DisplayFor(model => Model.Items[i].Name)
                @Html.HiddenFor(model => Model.Items[i].Name)
            </td>
            <td>
                @Html.DisplayFor(model => Model.Items[i].Price)
                @Html.HiddenFor(model => Model.Items[i].Price)
            </td>
            <td>

                @Html.HiddenFor(model => Model.Items[i].Item_Id)

            </td>


        </tr>
    }

</table>
    <div class="col text-center">
        <input type="submit" value="Checkouts" class="btn btn-default" />
    </div>

}

