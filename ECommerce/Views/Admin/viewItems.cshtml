@model IEnumerable<ECommerce.Models.Item>

@{
    ViewBag.Title = "viewItems";
}

<h2>viewItems</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SelectedItem)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SelectedItem)
        </td>
        <td>
            @Html.ActionLink("Edit", "UpdateItem", new { id = item.Item_Id}) |
            @Html.ActionLink("Details", "GetDetails", new { id = item.Item_Id }) |
            @Html.ActionLink("Delete", "DeleteItem",  new { id = item.Item_Id })
        </td>
    </tr>
}

</table>
